<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserProfile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/coverphoto" />

                <LinearLayout
                    android:id="@+id/topid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">


                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_alignParentTop="true"
                            android:layout_gravity="left"
                            android:id="@+id/profilepictureid"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_homeic"
                            app:civ_border_color="#EFE2E2"
                            app:civ_border_width="2dp"
                            app:civ_shadow="true"
                            app:civ_shadow_color="#EFE2E2"
                            android:layout_centerInParent="true"
                            app:civ_shadow_radius="8">

                        </com.mikhaellopez.circularimageview.CircularImageView>

                        </RelativeLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:id="@+id/pchooseid"
                            android:layout_gravity="center|bottom"
                            android:layout_marginBottom="15dp"
                            android:src="@drawable/ic_camera" />

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_height="match_parent">

                <TextView
                    android:gravity="center"
                    android:id="@+id/pnameid"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"

                    android:text="loading..."
                    android:textColor="#000"
                    android:textSize="25sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:weightSum="3"
                    android:padding="4dp"
                    android:layout_width="match_parent">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:id="@+id/profilepostid"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_height="20dp"
                            android:layout_width="20dp"
                            android:src="@drawable/ic_writing" />

                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="new post"
                            android:textColor="#000"
                            android:textSize="14sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_width="0dp"
                        android:id="@+id/editprofileid"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_height="25dp"
                            android:layout_width="25dp"
                            android:src="@drawable/ic_user" />

                        <TextView
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="edit profile"
                            android:textColor="#000"
                            android:textSize="14sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_width="0dp"
                        android:id="@+id/editpostid"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_height="20dp"
                            android:layout_width="20dp"
                            android:src="@drawable/ic_delete" />

                        <TextView
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="delete post"
                            android:textColor="#000"
                            android:textSize="14sp"
                            android:textStyle="normal" />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_marginLeft="25dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:layout_width="match_parent"
                    android:id="@+id/joinid"
                    android:text=" loading..."
                    android:drawableLeft="@drawable/ic_timelapse_black_24dp"
                    android:textSize="16sp"
                    android:textStyle="normal" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#B8B6B6"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="15dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:text=" About myself"
                    android:textColor="#000"
                    android:drawableLeft="@drawable/ic_assignment_ind_black_24dp"
                    android:textSize="20sp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:text="loading..."
                    android:gravity="fill_horizontal"
                    android:textStyle="normal"
                    android:id="@+id/paboutid"
                    android:layout_marginTop="5dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#B8B6B6"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="15dp"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:text=" Qualifications"
                    android:drawableLeft="@drawable/ic_graduate"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"/>

                <TextView
                   android:layout_marginLeft="25dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:text="loading..."
                    android:id="@+id/pqualificationid"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#B8B6B6"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="15dp"
                    />



                <TextView
                    android:layout_width="match_parent"
                    android:text=" Contact info"
                    android:textColor="#000"
                    android:drawableLeft="@drawable/ic_call_black_24dp"
                    android:textSize="20sp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="25dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:textSize="16sp"
                    android:text="loading..."
                    android:id="@+id/pcontactid"
                    android:textStyle="normal" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#B8B6B6"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:text=" Birthday"
                    android:textColor="#000"
                    android:textSize="20sp"
                    android:drawableLeft="@drawable/ic_assignment_black_24dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="25dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="loading..."
                    android:layout_marginBottom="30dp"
                    android:layout_width="match_parent"
                    android:id="@+id/pbirthdayid"
                    android:textSize="16sp"
                    android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>

