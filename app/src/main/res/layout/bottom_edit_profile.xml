<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:text=" Name"
                android:textColor="#000"
                android:drawableLeft="@drawable/ic_text_fields_black_24dp"
                android:textSize="20sp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:hint="Md ******"
                android:layout_marginTop="5dp"
                android:inputType="text"
                android:id="@+id/enameid"
                android:layout_marginRight="25dp"
                android:textStyle="normal"
                android:textSize="16sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:text=" About myself"
              android:textColor="#000"
                android:drawableLeft="@drawable/ic_assignment_ind_black_24dp"
                android:textSize="20sp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:inputType="text"
                android:hint="Short description about your self...."
                android:layout_marginTop="5dp"
                android:id="@+id/eaboutid"
                android:layout_marginRight="25dp"
                android:textStyle="normal"
                android:textSize="16sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:text=" Qualifications"
                android:textColor="#000"
                android:drawableLeft="@drawable/ic_graduate"
                android:textSize="20sp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:hint="B.Sc engg. in CSE"
                android:inputType="text"
                android:layout_marginTop="5dp"
                android:id="@+id/equalificationid"
                android:layout_marginRight="25dp"
                android:textStyle="normal"
                android:textSize="16sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:text=" Contact info"
              android:textColor="#000"
                android:drawableLeft="@drawable/ic_call_black_24dp"
                android:textSize="20sp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:inputType="number"
                android:hint="+8801*****"
                android:id="@+id/econtactid"
                android:layout_marginTop="5dp"
                android:layout_marginRight="25dp"
                android:textStyle="normal"
                android:textSize="16sp"
                />
            <TextView
                android:layout_width="match_parent"
              android:textColor="#000"
                android:textSize="20sp"
                android:drawableLeft="@drawable/ic_assignment_black_24dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:inputType="text"
                android:hint="4 april 1998"
                android:id="@+id/ebirthdayid"
                android:layout_marginTop="5dp"
                android:layout_marginRight="25dp"
                android:textStyle="normal"
                android:textSize="16sp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update profile"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="italic"
                android:id="@+id/eupdateprofileid"
                android:background="@drawable/buttonshape2"
                android:layout_marginBottom="22dp"
                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>